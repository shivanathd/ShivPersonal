<apex:page showHeader="false" sidebar="false" controller="PriceMangerController" standardStylesheets="true">
 <head>
     
 <apex:stylesheet value="/app.css"/>
 <style type="text/css">
 .fakehover {
  text-align:Center;
 }
 .fakehover:hover {
        background:#ffffff; /*BG color is a must for IE6*/
        text-decoration:none;
        text-align:left;
        font-weight:bold;
    }
  .fakehover span{
        display:none; 
        padding:2px 3px; 
        margin-left:8px; 
        width:auto;
  }
  .fakehover:hover span{
        display:inline; 
        position:absolute; 
        background:#FFC; 
        border:1px solid #cccccc; 
        color:#000000;
    }
 .sub-heading-gray {
    font-family: Arial, Helvetica, sans-serif;
    font-size: 11px;
    font-weight: bold;
    color: #333333;
    background-color: #CCCCCC;
}

.table_price {
    border-left: 1px solid #dfdfdf;
    border-top: 1px solid #dfdfdf;
}
.table_price th {
    padding: 5px;
    border-bottom: 1px solid #dfdfdf;
    border-right: 1px solid #dfdfdf;
    background: #f6f6f6;
    color: #393939;
    text-align:center;
}
</style>
 </head>
 <body>
 <apex:form id="frm">
  <apex:pageBlock id="pb1" title="Room Prices List"/>
 
  <table width="100%" class="table_price">
   <tr>
       <th>Room Type</th>
       <th>Price Structure</th>
   </tr>
  <apex:repeat var="rmt" value="{!RoomTypeList}">
    <tr>
        <td rowspan="2" class="fakehover">{!rmt.Name}<img src="/s.gif" alt="" style="float:right" class="helpOrb"/>
          <span>
              Standard Occupancy: {!rmt.Standard_Occupancy__c}<br/>
              Higher Occupancy: {!rmt.Higher_Occupancy__c}
          </span>
        </td>
            <td rowspan="2"> 
                  <table width="100%">
                       <tr style="padding: 0%;">
                           <td rowspan="2" bgcolor="#eeeeee" class="sub-heading-gray">Rate/Package</td>
                           <td rowspan="2" bgcolor="#eeeeee" class="sub-heading-gray">Standard Occupancy</td>
                           <td rowspan="2" bgcolor="#eeeeee" class="sub-heading-gray">Higher Per Person</td>
                           <td rowspan="2" bgcolor="#eeeeee" class="sub-heading-gray">Extra Bed Price</td>
                           <td rowspan="1" bgcolor="#eeeeee" style="text-align:center;" class="sub-heading-gray" colspan="3">Publish On</td>
                          
                       </tr>
                       <tr style="text-align:center;">
                           <td rowspan="1" bgcolor="#eeeeee" class="sub-heading-gray" colspan="1">Web</td>
                           <td rowspan="1" bgcolor="#eeeeee" class="sub-heading-gray" colspan="1">Agent</td>
                           <td rowspan="1" bgcolor="#eeeeee" class="sub-heading-gray" colspan="1">Corporate</td>
                          
                       </tr>
                 <apex:repeat var="rate" value="{!RoomRateMap[rmt.id]}">
                     <tr style="padding: 0%;">
                        <td bgcolor="#eeeeee"><apex:outputField value="{!rate.Name}"/> </td>
                        <td><apex:inputField value="{!rate.Standard_Occupancy__c}"/> </td>
                        <td><apex:inputField value="{!rate.Higher_Per_Person__c}"/> </td>
                        <td><apex:inputField value="{!rate.Extra_Bed__c}"/> </td>
                        <td style="text-align:center;"><apex:inputField value="{!rate.Web__c}"/> </td>
                        <td style="text-align:center;"><apex:inputField value="{!rate.Agent__c}"/> </td>
                        <td style="text-align:center;"><apex:inputField value="{!rate.Corporate__c}"/> </td>
                       
                      </tr>
                 </apex:repeat>
                </table>     
            </td>
    </tr>
    <tr>
    </tr>
  </apex:repeat>
</table>
<br/>
<apex:commandButton value="Save Rates" action="{!saveRecord}"/>
</apex:form> 
</body>
</apex:page>